import HtmlIcon from "./icons/HTML.astro";
import CSSIcon from "./icons/CSSIcon.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import ReactIcon from "./icons/ReactIcon.astro";
import TailwindCssIcon from "./icons/TailwindCssIcon.astro";
import NextJsIcon from "./icons/NextJsIcon.astro";
import MongoDbIcon from "./icons/MongoDBIcon.astro";
import PostgressIcon from "./icons/PostgressIcon.astro";
import PrismaIcon from "./icons/PrismaIcon.astro";
import RailwayIcon from "./icons/RailwayIcon.astro";
import NetlifyIcon from "./icons/NetlifyIcon.astro";
import VercelIcon from "./icons/VercelIcon.astro";
import FigmaIcon from "./icons/FigmaIcon.astro";
import DockerIcon from "./icons/DockerIcon.astro";

const TECHNOLOGIES = [
	{
		title: "Java",
		icon: JavaIcon,
	},
	{
		title: "Node",
		icon: NodeIcon,
	},
	{
		title: "TypeScript",
		icon: TypeScriptIcon,
	},
	{
		title: "Nest",
		icon: NestIcon,
	},
	{
		title: "HTML",
		icon: HtmlIcon,
	},
	{
		title: "CSS",
		icon: CSSIcon,
	},
	{
		title: "JavaScript",
		icon: JavaScriptIcon,
	},
	{
		title: "React",
		icon: ReactIcon,
	},
	{
		title: "TailwindCss",
		icon: TailwindCssIcon,
	},
	{
		title: "NextJs",
		icon: NextJsIcon,
	},
	{
		title: "MongoDb",
		icon: MongoDbIcon,
	},
	{
		title: "Postgress",
		icon: PostgressIcon,
	},
	{
		title: "Prisma",
		icon: PrismaIcon,
	},
	{
		title: "Railway",
		icon: RailwayIcon,
	},
	{
		title: "Netlify",
		icon: NetlifyIcon,
	},
	{
		title: "Vercel",
		icon: VercelIcon,
	},
	{
		title: "Figma",
		icon: FigmaIcon,
	},
	{
		title: "Docker",
		icon: DockerIcon,
	},
];
---

<script>
	import Swiper from "swiper";
	import { Autoplay } from "swiper/modules";
	import "swiper/css";

	const swiper = new Swiper(".swiper-category", {
		modules: [Autoplay],

		freeMode: true,
		loop: true,
		allowTouchMove: false,
		autoplay: {
			delay: 0,
			disableOnInteraction: false,
		},
		slidesPerView: 8,
		speed: 2500,
	});
</script>

<style>
	.container {
		position: relative;
		overflow: hidden;
	}

	.shadow-left,
	.shadow-right {
		position: absolute;
		top: 0;
		bottom: 0;
		width: 100px;
		background: linear-gradient(
			to right,
			rgba(2, 6, 23, 0.9),
			rgba(2, 6, 23, 0)
		);
		z-index: 2;
	}

	.shadow-left {
		left: 0;
	}

	.shadow-right {
		right: 0;
		background: linear-gradient(
			to left,
			rgba(2, 9, 23, 0.9),
			rgba(2, 6, 23, 0)
		);
	}

	.swiper {
		position: relative;
		z-index: 1;
	}

	.swiper-category {
		height: fit-content;
	}

	.swiper-wrapper {
		transition-timing-function: linear;
	}
</style>

<div class="container">
	<div class="shadow-left"></div>
	<div class="shadow-right"></div>
	<div class="swiper swiper-category">
		<div class="swiper-wrapper">
			{
				TECHNOLOGIES.map((technology) => (
					<div class="swiper-slide">
						<div class="flex flex-col items-center">
							<technology.icon class=" size-20" />
						</div>
					</div>
				))
			}
		</div>
	</div>
</div>
