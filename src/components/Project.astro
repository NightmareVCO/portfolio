---
import ProjectItem from "./ProjectItem.astro";
import JavaIcon from "./icons/Java.astro";
import HTMLIcon from "./icons/HTML.astro";
import BootstrapIcon from "./icons/Bootstrap.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";

const TAGS = {
	JAVA: {
		name: "Java",
		icon: JavaIcon,
	},
	HTML: {
		name: "HTML",
		icon: HTMLIcon,
	},
	BOOTSTRAP: {
		name: "Bootstrap",
		icon: BootstrapIcon,
	},
	JS: {
		name: "JavaScript",
		icon: JavaScriptIcon,
	},
};

const PROJECTS = [
	{
		title: "Polls App",
		description:
			"Una aplicación web para llenar formularios y guardar la información, permitiendo visualizar en un mapa las entradas. Permite estar offline al momento de llenar una encuesta. Incluye autentificación de usuarios y roles.",
		github:
			"https://github.com/NightmareVCO/practicas-icc-352/tree/main/parcial-2",
		image: "/projects/polls.webp",
		tags: [TAGS.JAVA, TAGS.HTML, TAGS.BOOTSTRAP, TAGS.JS],
	},
];
---

<div class="flex flex-col gap-y-12">
	{
		PROJECTS.map((project) => (
			<article>
				<ProjectItem {...project} />
			</article>
		))
	}
</div>
